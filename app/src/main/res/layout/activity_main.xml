<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.my.mvpframe.ui.home.MainActivity">


    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/commontab"
        app:layout_constraintTop_toTopOf="parent" />

    <com.my.mvpframe.widget.CommonTabLayout
        android:id="@+id/commontab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tl_iconHeight="25dp"
        app:tl_iconWidth="25dp"
        app:tl_textSelectColor="@color/colorPrimaryDark"
        app:tl_textUnselectColor="@color/colorAccent" />

</android.support.constraint.ConstraintLayout>
